issn = {15577341},
journal = {ACM Computing Surveys},
keywords = {Game development,Model-driven software development},
number = {6},
title = {{Model-driven game development: A literature review}},
volume = {52},
year = {2019}
}
@article{Deterding2011,
abstract = {Recent years have seen a rapid proliferation of mass-market consumer software that takes inspiration from video games. Usually summarized as "gamification", this trend connects to a sizeable body of existing concepts and research in human-computer interaction and game studies, such as serious games, pervasive games, alternate reality games, or playful design. However, it is not clear how "gamification" relates to these, whether it denotes a novel phenomenon, and how to define it. Thus, in this paper we investigate "gamification" and the historical origins of the term in relation to precursors and similar concepts. It is suggested that "gamified" applications provide insight into novel, gameful phenomena complementary to playful phenomena. Based on our research, we propose a definition of "gamification" as the use of game design elements in non-game contexts. {\textcopyright} 2011 ACM.},
author = {Deterding, Sebastian and Dixon, Dan and Khaled, Rilla and Nacke, Lennart},
doi = {10.1145/2181037.2181040},
file = {:C$\backslash$:/Users/Light/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Deterding et al. - 2011 - From game design elements to gamefulness Defining gamification.pdf:pdf},
isbn = {9781450308168},
journal = {Proceedings of the 15th International Academic MindTrek Conference: Envisioning Future Media Environments, MindTrek 2011},
keywords = {alternate reality games,game-based technologies,gameful design,gamefulness,games,gamification,pervasive games,play,playful design,playfulness,serious games},
pages = {9--15},
title = {{From game design elements to gamefulness: Defining "gamification"}},
year = {2011}
}
@article{Powley2017,
abstract = {Fluidic games blur the line between gameplay and game design, providing playful, non-technical, easy-to-use tools for users to design their own games. We introduce Wevva, our first fluidic game for iOS, which allows users to design and share their own games based on novel mechanics, entirely on a mobile device, with no need for programming skills. The development of such software is a significant challenge in user interface design, requiring a new design approach compared to the design of more traditional creative tools, and with much scope for mixed-initiative co-creation and other assistive AI technologies. Our aim with fluidic games is to democratise game design, allowing anyone and everyone to express themselves through the artform of digital games.},
author = {Powley, Edward J. and Nelson, Mark J. and Gaudl, Swen E. and Colton, Simon and {P{\'{e}}rez Ferrer}, Blanca and Saunders, Rob and Ivey, Peter and Cook, Michael},
