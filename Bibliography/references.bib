issn = {1946-6226},
journal = {ACM Transactions on Computinig Education},
keywords = {Elementary schools,Game design,Latent semantic analysis,Middle schools,Programming,STEM},
number = {2},
pages = {1--34},
title = {{Scalable game design: A strategy to bring systemic computer science education to schools through game design and simulation creation}},
volume = {15},
year = {2015}
}
